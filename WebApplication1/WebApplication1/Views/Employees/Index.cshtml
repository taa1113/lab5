@using WebApplication1.Helpers
@using WebApplication1.Models.ViewModels
@model EmployeesViewModel

@{
    ViewData["Title"] = "Отдел кадров";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Отдел кадров</h2>

<p>
    @Html.ActionLink("Добавить сотрудника", "Create")
</p>
<table class="table" width="100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employees.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees.FirstOrDefault().Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees.FirstOrDefault().MiddleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees.FirstOrDefault().Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees.FirstOrDefault().Position)
            </th>
            <th>
                Действия
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Employees)
        {
            <tr>
                <td>
                @Html.DisplayFor(modelitem => item.Name)
                </td>
                <td>
                @Html.DisplayFor(model => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(model => item.MiddleName)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Position)
                </td>
                <td>
                    @Html.ActionLink("Удалить", "Remove", new { id = item.Id }) |
                    @Html.ActionLink("Изменить", "Edit", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="btn-group">
    @Html.PageLinks(Model.PageInfo, x => Url.Action("Index", new { page = x}))
</div>
